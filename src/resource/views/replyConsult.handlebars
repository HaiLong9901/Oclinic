<!-- home starts -->

<section class="home replyHome">
    {{#if doctor}}
    <div class="replyClt" id="replyClt">
        
        {{#with load}}
        <div class="content">
            <div class="content__tit">
                <span>Người yêu cầu</span>
                <h3>{{namePatient}}</h3>
            </div>
        <div class="content__main">
            <div class="sensitive">
                <span>Dị ứng</span>
                <p>{{_sensitive}}</p>
            </div>
            <div class="sympton">
                <span>Triệu chứng</span>
                <p>{{sympton}}</p>
            </div>
            {{#if img}}
            <div class="image">
                <span>Ảnh</span>
                <img src="/img/{{img}}" alt="anh">
            </div>
            {{/if}}
        </div>
        <div class="content__reply_clt">
            <form action="/consultation/reply" method="post" id="reply__form" class="reply__form">
                <label for="reply">Trả lời</label>
                <textarea name="reply" id="reply" cols="30" rows="10"></textarea>
            </form>
        </div>
        <div class="content__submit_form">
            <button class="" form="reply__form" type="submit" value="submit">Gửi</button>
        </div>
        </div>
        {{/with}}
    </div>
    {{/if}}
    {{#if patient}}
    <div class="replyClt" id="replyClt">
        
        {{#with load}}
        <div class="content">
        <div class="content__main">
            <div class="sensitive">
                <span>Dị ứng</span>
                <p>{{_sensitive}}</p>
            </div>
            <div class="sympton">
                <span>Triệu chứng</span>
                <p>{{sympton}}</p>
            </div>
            {{#if img}}
            <div class="image">
                <span>Ảnh</span>
                <img src="/img/{{img}}" alt="anh">
            </div>
            {{/if}}
        </div>
            <div class="content__reply_clt">
                <h3>Hello</h3>
                <p>{{this.content}}</p>
            </div>

        </div>
        {{/with}}
    </div>
    {{/if}}
</section> 