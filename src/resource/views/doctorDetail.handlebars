{{!-- home starts --}}
<section class="doctorSection home">
    <div class="doctorSection__container">
        <div class="container">
            {{#with display}}
            <div class="doctorDetail">
                <div class="doctor_img">
                    <img src="https://drive.google.com/uc?export=view&id={{this.img}}" alt="">
                </div>
                <div class="doctor_decription">
                    <h3 class="doctor">Bác sĩ</h3>
                    <h3 class="name">{{this.name}}</h3>
                    <ul class="decription">
                        <li><i class="far fa-calendar-minus"></i>  Ngày sinh: {{this.dob}}</li>
                        <li><i class="fas fa-mobile-alt"></i>  Số điện thoại: {{this.phonenum}}</li>
                        <li><i class="far fa-envelope"></i>   Email:  {{this.email}}</li>
                        <li><i class="fas fa-user-graduate"></i>   Học vị:     {{this.degree}}</li>
                        <li><i class="far fa-hospital"></i>   Khoa:     Nhi khoa</li>
                        <li><i class="fas fa-map-marker"></i>  Vị trí:   {{this.postition}}</li>
                        <li><i class="far fa-user"></i>  Tiếu sử:    {{this.description}}</li>
                    </ul>
                </div>
            </div>
            {{/with}}
        </div>
    </div>

</section>
{{!-- home ends --}}